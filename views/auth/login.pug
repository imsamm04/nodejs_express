extends ../layouts/common.pug

block content
    h1 Login 
    if errors
        each error in errors  
            .alert.alert-danger= error
    form(action="/users/create" method="POST")
        .form-group
        label(for="email") Email 
        input#email.form-control(name="email" type="text", value=values ? values.name : '')

        .form-group
        label(for="password") Passw0rd 
        input#password.form-control(name="password" type="password", value=values ? values.phone : '')
        
        button(class="mt-2 btn btn-primary") Login